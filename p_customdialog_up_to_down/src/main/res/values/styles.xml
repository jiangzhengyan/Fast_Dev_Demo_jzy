<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 弹出框,由下至上 -->
    <style name="ToUp_dialogStyle" parent="@android:style/Animation.Dialog">
        <item name="@android:windowEnterAnimation">@anim/share_popup_in</item>
        <!-- 进入时的动画 -->
        <item name="@android:windowExitAnimation">@anim/share_popup_out</item>
        <!-- 退出时的动画 -->
    </style>

    <!--  从下到上对话框样式 -->
    <style name="Theme.Light.Dialog.Down.To.Up" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
